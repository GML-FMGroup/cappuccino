# ============================================
# 服务器配置
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=DEBUG

# ============================================
# 模型配置
# ============================================

# Planning 模型 (用于规划、分发、验证、总结、OCR、代码生成)
PLANNING_MODEL=gemini-2.0-flash
PLANNING_API_KEY=sk-xxx...
PLANNING_BASE_URL=your_planning_base_url_here

# Grounding 模型 (用于 interact_executor 和 scroll_executor，需要视觉定位能力)
GROUNDING_MODEL=qwen2.5-vl-7b-instruct
GROUNDING_API_KEY=sk-xxx...
GROUNDING_BASE_URL=your_grounding_base_url_here

# ============================================
# 记忆配置
# ============================================
# User Memory 最大历史记录数（使用 SQLite 存储）
MEMORY_MAX_HISTORY=10
# Task Context Memory 最大步骤数
TASK_MAX_MEMORY_STEPS=10

# ============================================
# Telegram Bot 配置
# ============================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USERS=

# ============================================
# URL API 配置
# ============================================
URL_API_ENABLED=true
URL_API_HOST=0.0.0.0
URL_API_PORT=8000
