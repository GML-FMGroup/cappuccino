# ============================================
# 服务器配置
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO

# ============================================
# 模型配置
# ============================================

# Planning 模型 (用于规划、分发、验证、总结、代码生成)
PLANNING_MODEL=gemini-3-flash-preview
PLANNING_API_KEY=sk-
PLANNING_BASE_URL=

# Grounding 模型 (用于 interact_executor，需要视觉定位能力)
GROUNDING_MODEL=qwen/qwen3-vl-8b-instruct
GROUNDING_API_KEY=sk-
GROUNDING_BASE_URL=

# ============================================
# Agent配置
# ============================================
# User Memory 最大历史记录数（使用 SQLite 存储）
USER_MAX_HISTORY=10
# Task Context Memory 最大步骤数
TASK_MAX_MEMORY_STEPS=5
# Agent 任务最大迭代次数
MAX_ITERATIONS=10

# ============================================
# 平台配置
# ============================================

# URL API 平台 (基于服务器配置)
URL_API_ENABLED=true

# Telegram Bot 平台
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USERS=

